@page
@model AddModel
@{
    ViewData["Title"] = "Add Book";
}

<h2 class="my-sm-2">Add Book</h2>
<form asp-page="/Books/Add">
    <form-group asp-for="@Model.Book.Title"></form-group>
    <form-group asp-for="@Model.Book.Author"></form-group>
    <form-group asp-for="@Model.Book.ImageUrl"></form-group>
    <div class="form-group row">
        <label asp-for="@Model.Book.Description" class="col-sm-2 col-form-label text-sm-right"></label>
        <div class="col-sm-5">
            <textarea asp-for="@Model.Book.Description" class="form-control" rows=5 placeholder="Description"></textarea>
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="@Model.Book.Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-5 offset-sm-2">
            <button type="submit" class="btn btn-success">Add book</button>
            <button type="reset" class="btn btn-light">Cancle</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

