@model Blog.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="col-sm-9" style="padding-left: 30px">
    <h4><small>REGISTER</small></h4>
    <hr>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Username, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-5">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            </div>
        </div>
         <div class="form-group">
             @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-5">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
             </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-5">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-5">
                 @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
             </div>
        </div>
        <div class="form-group">
             <div class="col-md-offset-3 col-sm-5">
                <input type="submit" class="btn btn-success" value="Register" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
